<!-- /templates/index.liquid -->

{% comment %}
  Track how many sections are shown
{% endcomment %}
{% assign number_of_index_sections = 0 %}
<!-- Hero -->
{% if settings.home_section_1 != blank %}
  {% assign number_of_index_sections = number_of_index_sections | plus: 1 %}
  {% include settings.home_section_1, section_number: 1 %}
{% endif %}

{% unless settings.lockdown_enabled %}
  <!-- Featured products -->
  {% if settings.home_section_2 != blank %}
    {% assign number_of_index_sections = number_of_index_sections | plus: 1 %}
    {% include settings.home_section_2, section_number: 2 %}
  {% endif %}
{% endunless %}

{% comment %}
  {% if settings.home_section_3 != blank %}
    {% assign number_of_index_sections = number_of_index_sections | plus: 1 %}
    {% include settings.home_section_3, section_number: 3 %}
  {% endif %}

  {% if settings.home_section_4 != blank %}
    {% assign number_of_index_sections = number_of_index_sections | plus: 1 %}
    {% include settings.home_section_4, section_number: 4 %}
  {% endif %}
{% endcomment %}

{% unless settings.lockdown_enabled %}
	<a href="/collections/all" class="button--tertiary text-center">Continue shopping &rarr;</a>
{% endunless %}

<script type="text/javascript">
  $(document).on("click", ".js-index-scroll", function(){
    var top = $(window).height() / 2;
    $('html, body').animate({
      scrollTop: top
    }, 500);
    $(this).fadeOut("slow");
    return false;
  });

  $(document).on( 'scroll', function() {
    var quarter = $(window).height() / 4;
    if ($(window).scrollTop() > quarter) {
      $(".js-index-scroll").fadeOut("slow");
      return false;
    }
  });
</script>
